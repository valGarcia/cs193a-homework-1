<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center|top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.valerie.firstapp.ConnectFour">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass and Play Tic Tac Toe!"
        android:textColor="#000000"
        android:layout_gravity="center|top"
        android:id="@+id/intro" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/topLeft"
            android:src="@drawable/empty"
            android:onClick="userClick"
            android:clickable="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/topMid"
            android:onClick="userClick"
            android:src="@drawable/empty"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/topRight"
            android:onClick="userClick"
            android:src="@drawable/empty"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/midLeft"
            android:onClick="userClick"
            android:src="@drawable/empty"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/midMid"
            android:onClick="userClick"
            android:src="@drawable/empty"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/midRight"
            android:onClick="userClick"
            android:src="@drawable/empty"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/botLeft"
            android:onClick="userClick"
            android:src="@drawable/empty"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/botMid"
            android:onClick="userClick"
            android:src="@drawable/empty"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/botRight"
            android:onClick="userClick"
            android:src="@drawable/empty"
            />


    </GridLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:layout_margin="20dp"
        android:onClick="resetBoard"
        />

</LinearLayout>
